{% extends 'base.html.twig' %}

{% block main %}
    <section class="row">
        <h1>Card</h1>

        <table class="table table-striped table-hover">
            <tbody>
            <tr>
                <th>Id</th>
                <td>{{ cart.id }}</td>
            </tr>
            <tr>
                <th>Createdat</th>
                <td>{% if cart.createdAt %}{{ cart.createdAt|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            </tbody>
        </table>

        <ul>
            <li>
                <a href="{{ path('cart_manage') }}" >Back to the list</a>
            </li>
            <li>
                <a href="{{ path('cart_edit', { 'id': cart.id }) }}" class="btn btn-success">Edit</a>
            </li>
            <li>
                {{ form_start(delete_form) }}
                <input type="submit" value="Delete" class="btn btn-danger">
                {{ form_end(delete_form) }}
            </li>
        </ul>
    </section>

{% endblock %}
