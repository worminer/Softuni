{% extends 'base.html.twig' %}

{% block main %}
    <section class="row">
        <h1>Category</h1>

        <table class="table table-striped table-hover">
            <tbody>
            <tr>
                <th>Id</th>
                <td>{{ category.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ category.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ category.description }}</td>
            </tr>
            </tbody>
        </table>

        <ul>
            <li>
                <a href="{{ path('categories_manage') }}">Back to the list</a>
            </li>
            <li>
                <a href="{{ path('categories_edit', { 'id': category.id }) }}">Edit</a>
            </li>
            <li>
                {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
                {{ form_end(delete_form) }}
            </li>
        </ul>
    </section>

{% endblock %}
